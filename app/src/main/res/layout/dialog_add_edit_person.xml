<!-- res/layout/dialog_add_edit_person.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="person"
            type="com.example.apiClient.models.Person" />
        <variable
            name="viewModel"
            type="com.example.apiClient.ui.PersonViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_veriety_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Veriety ID"
            android:text="@={person.verietyID}" />

        <EditText
            android:id="@+id/et_status_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status ID"
            android:text="@={person.statusID}" />

        <EditText
            android:id="@+id/et_inn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INN"
            android:text="@={person.inn}" />

        <EditText
            android:id="@+id/et_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:text="@={person.type}" />

        <EditText
            android:id="@+id/et_shifer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shifer"
            android:text="@={person.shifer}" />

        <EditText
            android:id="@+id/et_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data"
            android:text="@={person.data}" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="@{() -> viewModel.onSaveClicked(person)}" />

    </LinearLayout>
</layout>
